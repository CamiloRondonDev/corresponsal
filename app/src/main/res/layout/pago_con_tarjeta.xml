<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".corresponsal.PagoConTarjeta">

    <include
        layout="@layout/barnser_corresponsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:text="Pago Con Tarjeta"
        android:textAlignment="center"
        android:textSize="30sp" />

    <View
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:background="#1299F3" />




    <EditText
        android:id="@+id/numeroTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Numero de tarjeta"
        android:inputType="number" />




    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/cvv"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:gravity="center"
            android:hint="CVV"
            android:inputType="number"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/mm"
            android:layout_width="77dp"
            android:layout_height="63dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:gravity="center"
            android:hint="mm"
            android:inputType="number"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/dd"
            android:layout_width="77dp"
            android:layout_height="63dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:gravity="center"
            android:hint="dd"
            android:inputType="number"
            android:textSize="30dp" />



    </LinearLayout>

    <EditText
        android:id="@+id/nombredeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Nombre del Cliente" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="17dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Num Cuotas"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/valoraPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Valor a pagar"
        android:inputType="number" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/botonConfirmarCliente00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/fondos_boton_inicar_sesion_corresponsal"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botonCancelarCliente00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/fondos_boton_cancelar_corresponsal"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="#347FEF" />
    </LinearLayout>

</LinearLayout>