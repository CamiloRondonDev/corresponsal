<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginTop="35dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView

                    android:id="@+id/nombreCorresponsalBarner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15sp"
                    android:text="Historial Transacciones"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold"

                    />

                <View
                    android:layout_width="250dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/purple_100" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/menuCorresponsal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:onClick="showPopup"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/atrasCorresponsalseach"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="1dp"
            android:onClick="showPopup"

            app:srcCompat="@drawable/flecha_atras" />

    </LinearLayout>

    <SearchView
        android:id="@+id/buscarenLista"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="15dp"
        android:background="@drawable/fondos_hisotrial" />

</LinearLayout>