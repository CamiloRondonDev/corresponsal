<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".administrador.LoginAdministrador">

    <TextView
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="150dp"
        android:text="Bienvenido a"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="2dp"
        android:text="Corresponsal"
        android:textAlignment="center"
        android:textSize="40sp" />

    <View
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_500" />

    <EditText
        android:id="@+id/loginCorresponsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:text="Admin@wposs.com"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Correo Electronico" />

    <EditText
        android:id="@+id/contraseñaCorresponsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Admin123*"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botonIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:layout_marginTop="150dp"
        android:textAllCaps="false"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/fondos_boton_inicar_sesion"
        />


</LinearLayout>