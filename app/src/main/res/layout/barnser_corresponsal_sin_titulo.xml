<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/nombreCorresponsalBarner"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15sp"
                    android:textColor="#347FEF"
                    android:textSize="10pt"
                    android:textStyle="bold"

                    />

                <TextView

                    android:id="@+id/saldoCorresponsalBarner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15sp"
                    android:textColor="#347FEF"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/menuCorresponsal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:onClick="showPopup"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/atrasCorresponsal_sin_titulo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:onClick="showPopup"
            android:visibility="gone"
            app:srcCompat="@drawable/flecha_atras" />

    </LinearLayout>



</LinearLayout>