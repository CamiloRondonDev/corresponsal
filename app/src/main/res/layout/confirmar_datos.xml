<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".corresponsal.ConfirmarDatos">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:text="Cofirmar datos corresponsal"
        android:textAlignment="center"
        android:textSize="25sp" />

    <View
        android:layout_width="315dp"
        android:layout_height="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:background="@color/purple_800" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/fondos_confirmar_corresponsal_azul"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirmarNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/confirmarCedulaCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:textSize="17sp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/confirmarSaldoinicailCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:textSize="17sp"
            android:inputType="textPersonName" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/botonConfirmarDatosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/fondos_boton_inicar_sesion_usuario"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botonCancelarDatosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/fondos_confirmar_corresponsal_azul"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/purple_800" />
    </LinearLayout>


</LinearLayout>