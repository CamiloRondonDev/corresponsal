<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tituloListadoClientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15sp"
                    android:text=""
                    android:textColor="@color/purple_500"
                    android:textSize="23sp"
                    android:textStyle="bold"

                    />

                <View
                    android:layout_width="240dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/purple_500" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/menuAdmin02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:onClick="showPopup"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/atrasAdmin03"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginStart="55dp"
            android:onClick="showPopup"
            app:srcCompat="@drawable/flecha_atras" />

    </LinearLayout>

    <SearchView
        android:id="@+id/buscarenListaClientes"
        android:layout_width="355dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/fondos_lista_rojo" />


</LinearLayout>