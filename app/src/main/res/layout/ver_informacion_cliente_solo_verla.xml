<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".administrador.VerInformacionClienteSoloVerla">

  <include
      layout="@layout/baner_admin_sin_titulo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="50dp"
      android:background="@drawable/fondos_confirmar_corresponsalr"
      android:orientation="vertical">

    <TextView
        android:id="@+id/mostrarNombreCorresponsal0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/mostrarNitCorresponsal0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/mostarSaldoCorresponsal0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/mostrarCoreoCorresponsal0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="67dp"
      android:layout_marginTop="80dp"
      android:orientation="horizontal">


    <Button
        android:id="@+id/Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:background="@drawable/fondos_boton_inicar_sesion"
        android:text="Aceptar"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:background="@drawable/fondos_boton_cancelar"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="@color/purple_500" />
  </LinearLayout>


</LinearLayout>